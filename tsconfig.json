{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["node_modules"]
}
