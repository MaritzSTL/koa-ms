{
  "name": "koa-ms",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "test": "jest",
  "dependencies": {
    "@maritz/mtztools-ms-helpers": "^5.3.10",
    "@newrelic/koa": "^2.0.0",
    "@sentry/node": "5.6.2",
    "apollo-server": "^2.9.0",
    "apollo-server-koa": "^2.9.0",
    "async": "^3.1.0",
    "cloud-config-client": "^1.4.2",
    "globby": "^10.0.1",
    "graphql": "^14.5.4",
    "graphql-tools": "^4.0.6",
    "koa": "^2.8.1",
    "koa-router": "^7.4.0",
    "launchdarkly-node-server-sdk": "^5.9.0",
    "moment": "^2.24.0",
    "newrelic": "^5.11.0",
    "pino": "^5.13.2"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.9.0",
    "@types/async": "^3.0.1",
    "@types/cloud-config-client": "^1.4.0",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.18",
    "@types/koa": "^2.0.49",
    "@types/koa-router": "^7.0.42",
    "@types/pino": "^5.8.10",
    "graphql-cli": "^3.0.14",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "prisma-client-lib": "^1.34.8",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.3.0",
    "tsc-watch": "^2.4.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "rm -rf dist && tsc -w",
    "clean": "rm -rf node_modules coverage dist",
    "start": "node dist/index.js",
    "start:watch": "tsc-watch --onSuccess 'node --inspect=0.0.0.0:5858 dist/index.js'",
    "start:prisma": "docker-compose up -d mongo-db prisma",
    "start:all": "yarn run start:prisma && sleep 7 && yarn run db:setup &&  yarn run start:watch",
    "stop:all": "docker-compose down",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "echo 'TODO'",
    "db:setup": "yarn run db:deploy && yarn run db:generate && yarn run db:fixtures:load",
    "db:deploy": "prisma deploy --env-file .env",
    "db:generate": "prisma generate --env-file .env",
    "db:fixtures:load": "prisma seed -r --env-file .env",
    "docs:serve": "yarn run docs:generate:typedoc && npx @11ty/eleventy --serve",
    "docs:generate": "yarn run docs:generate:typedoc && yarn run docs:generate:eleventy",
    "docs:generate:eleventy": "npx @11ty/eleventy",
    "docs:generate:typedoc": "typedoc --readme docs/_api/api-readme.md --tsconfig tsconfig_apidoc.json --mode modules --excludeNotExported --excludePrivate --ignoreCompilerErrors --exclude '{**/*test*,**/node_modules/**,**/test/**}' --out ./docs/_site/_api src/**/*.ts"
  }
}
