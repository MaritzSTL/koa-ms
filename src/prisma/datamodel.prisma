type Recognition {
  id: ID! @id
  createdAt: DateTime @createdAt
  updatedAt: DateTime @updatedAt
  note: String!
  lineItems: [LineItem]! @relation(link: INLINE)
}

type LineItem {
  id: ID! @id
  from: String!
  to: String!
  createdAt: DateTime @createdAt
  updatedAt: DateTime @updatedAt
  amount: Int!
}

